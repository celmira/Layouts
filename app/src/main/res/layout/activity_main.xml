<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.celmiramedina.comentarios.MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="CalificaciÃ³n"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp" />

    <RatingBar
        android:id="@+id/ratingBarEstrellas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:numStars="5"
        android:rating="1"
        android:stepSize="1"
        tools:layout_editor_absoluteY="17dp"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/mensajeEscala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text=""
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="160dp" />

    <EditText
        android:id="@+id/espacioComentario"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="center_horizontal"
        android:hint="Dejanos tus comentarios"
        android:lines="5"
        tools:layout_editor_absoluteY="134dp"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#e57373"
        android:text="Enviar"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteY="296dp"
        tools:layout_editor_absoluteX="116dp" />

</LinearLayout>
